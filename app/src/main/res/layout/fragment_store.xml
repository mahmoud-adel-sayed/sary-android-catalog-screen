<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Banner -->
        <androidx.cardview.widget.CardView
            style="@style/Banner"
            android:layout_margin="@dimen/activity_horizontal_margin"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/banner_corner_radius"
            app:cardBackgroundColor="#eee">

            <com.sary.task.banner.BannerView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:showArrows="false"
                app:showBullets="true"
                app:autoScrollEnabled="true"
                app:activeBulletColor="@color/white"
                app:inactiveBulletColor="@color/gray" />
        </androidx.cardview.widget.CardView>

        <!-- Catalog Sections -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_catalog_sections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>